

<!-- Modal Login -->
<div id="loginModal" class="modal fade" aria-labelledby="LoginForm" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="btn btn-warning btn-xs pull-right" data-dismiss="modal">Skip</div>
                <img src="~/Images/Site/logo24.png" />
                <span class="modal-title h4" style="margin-left:5px">Login</span>
            </div>
            <div class="modal-body">
                <div class="row" style="margin-left:10px">
                    <label>Login:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input id="modal-loginKey" type="text" placeholder="Email/Mobile" />
                </div>
                <p></p>
                <div class="row" style="margin-left:10px">
                    <label>Password:&nbsp;</label>
                    <input id="modal-loginPwd" type="password" placeholder="Password" />
                    <button id="modal-loginSubmit" type="button" class="btn btn-primary btn-xs" aria-label="Login">
                        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                    </button>
                </div>
                <hr />
                <h4>Register - New User</h4>
                <div class="row" style="margin-left:10px">
                    <label>Login:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input id="modal-newloginKey" type="text" placeholder="Email/Mobile" />
                </div>
                <p></p>
                <div class="row" style="margin-left:10px">
                    <label>Password:&nbsp;</label>
                    <input id="modal-newloginPwd" type="password" placeholder="Password" />
                </div>
                <p></p>
                <div class="row" style="margin-left:10px">
                    <label>Name:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input id="modal-newloginName" type="text" placeholder="Name (optional)" />
                    <button id="modal-registerSubmit" type="button" class="btn btn-success btn-xs" aria-label="Register">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
