@model carbon.Models.Locator

<h2>Register User</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <form class="form-inline">
        <div class="form-group">
            <label for="Key" class="col-sm-2 control-label">Identity</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Key, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email / Mobile" } })
            </div>
        </div>
        <p></p>
        <div class="form-group">
            <label for="Key" class="col-sm-2 control-label">Name <small>(optional)</small></label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
            </div>
        </div>

        @*<div class="checkbox">
            <label>
                <input type="checkbox"> Remember me
            </label>
        </div>*@
        <p></p>
        <div class="">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-default">Sign in</button>
                <button type="submit" class="btn btn-primary">Skip</button>                
            </div>
        </div>
                
    </form>
</div>


}